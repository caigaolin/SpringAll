<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.topnet.mapper.UserMapper">
    <resultMap id="baseMap" type="com.topnet.model.User">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="password" property="password" jdbcType="VARCHAR"/>
        <result column="enabled" property="enabled" jdbcType="BIGINT"/>
        <result column="locked" property="locked" jdbcType="BIGINT"/>
    </resultMap>

    <select id="loadUserByUsername" parameterType="java.lang.String" resultType="com.topnet.model.User">
        SELECT *
        FROM USER
        where username = #{username}
    </select>

    <select id="getRolesById" resultType="com.topnet.model.Role">
        select *
        from role
        where id in (select rid from user_role where uid = #{uid})
    </select>
</mapper>